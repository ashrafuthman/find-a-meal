<div class = "background-banner">
<center><h1 class=" title text-center">List of Cocktails </h1></center>

<div class="container text-center">
<% @cocktails.each do |cocktail| %>
<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="card index-card">
    <div class="card-photo" style="
  background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, crop: :fill %>')">
    </div>
    <div class="card-body">
    <h5 class="card-title"> <%= cocktail.name.capitalize %></h5>
    </div>
  <h2><%= link_to 'More details', cocktail_path(cocktail), class: "card-inerlink" %></h2>
  </div>
</div>
<% end %>
</div>
<p class="text-center add_btn"> <%= link_to "Add an new cocktail", new_cocktail_path, class: "btn btn-primary card-inerlink" %></p>
</div>
