<div class="grid">
  <div class="text">
    <div class="name-show">
      <h1><%= @event.name %></h1>
    </div>
    <div class="description">
      <h4> <%= @event.description %></h4>
    </div>
    <div class="show-price">
    <p><%= @event.price %> $</p>
    </div>
  <!-- Change the code of the booking below! -->
    <div class="booking">
      <p>Serving 3 seats</p>
      <p>10 seats are available <i class="far fa-smile" style="color: green;"></i>

</p>
    </div>
    <div id="buttons book-btn">
      <%= link_to "Book Your Spot!", new_event_booking_path(@event), class: "btn cancel-seat" %>
    </div>
    <div class="location">
      <p><strong>Address:</strong> <%= @event.address %></p>
    </div>
    <div class="date">
      <p><strong><%= @event.date.strftime "%B %e" %> at <%= @event.time.strftime "%H:%M" %></strong></p>
    </div>

  </div>
  <div id="map" class="show-map" data-markers="<%= @marker.to_json %>"></div>
  <div class="pic-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_path @event.photo, crop: :fill %>);">
</div>

