
<% @events.each do |event| %>
  <%= link_to event_path(event) do %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" >
        <% if event['photo'].blank?  %>
        <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://source.unsplash.com/collection/1322972/1600x900);">
          <h2 class= "card-name text-center"><%= event.name.capitalize %></h2>
        </div>
        <% else %>
        <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_path event.photo, crop: :fill %>);">
          <h2 class= "card-name text-center"><%= event.name.capitalize %></h2>
        </div>

        <% end %>

        <div class="card-description">
          <p><%= event.description.first(60) + "..." %></p>
        </div>
        <div>
         <h3 class= "text-center card-price">Price: <%= event.price %>$</h3>
       </div>
        <div class="card-date text-center"><%= event.date %></div>
      </div>
    </div>
  <% end %>
<% end %>



